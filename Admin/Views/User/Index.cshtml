@model IEnumerable<EcommerceProject.Models.User>
@{
    ViewData["Title"] = "Admin user";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script>
        $(document).ready(function() {

            // Xóa
            $(".deleteUser").click(function() {
                var id = $(this).data("id");
                var conf = confirm("Ban co muon xoa");
                if(conf === true){
                    $.ajax({
                        url: '/admin/user/delete',
                        type: 'POST',
                        data: {id : id},
                        success: function(rs){
                            if(rs.success){
                                $('#trow_' + id).remove();
                            }
                        }
                    })                  
                }              
            });

             $("#searchKeyword").on("input", function() {
                var id = $(this).data("id");
                var keyword = $(this).val();
                $.ajax({
                    url: '/admin/user/search',
                    type: 'POST',
                    data: { keyword: keyword },
                    success: function(data) {
                        $(".categoryList").html(data);
                    }
                });
            });
        });
    </script>
}

@section naviheader{
	    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/user" class="nav-link">Người dùng</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Người dùng</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
					<li class="breadcrumb-item active">Người dùng</li>
				</ol>
			</div>
		</div>
	</div>
</section>

<!-- Main content -->
<section class="content">
	<div class="container-fluid">
			
		<!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Danh sách người dùng</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input id="searchKeyword" type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>STT</th>
                      <th>Họ tên</th>
                      <th>Email</th>
                    </tr>
                  </thead>
                  <tbody>
					@if(Model != null && Model.Any()){
                        var i = 1;
                        foreach(var item in Model){
						    <tr id="trow_@item.Id" class="categoryList">
							    <td>@i</td>
							    <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>                                    
                                    <button data-id="@item.Id" class="btn btn-sm btn-danger deleteCategory">Xóa</button>
                                </td>
						    </tr>
                            i++;
                        }

					}else{
						<tr>
							<td colspan="3">Không có người dùng</td>
						</tr>
					}

                  </tbody>
                </table>
              </div>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        <!-- /.row -->

	</div>
	<!-- /.container-fluid -->
</section>
<!-- /.content -->

